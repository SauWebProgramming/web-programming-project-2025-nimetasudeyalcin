@model List<IkinciElEsya.Models.Category>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">Kategori Yönetimi</h2>
            <p class="text-muted small mb-0">Sistemdeki ürün kategorilerini buradan düzenleyebilirsiniz.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
            + Yeni Kategori
        </a>
    </div>

    <div class="card shadow border-0 overflow-hidden" style="border-radius: 15px;">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-primary">
                        <th class="ps-4 py-3" style="width: 80px;">ID</th>
                        <th class="py-3">Kategori Adı</th>
                        <th class="py-3">Açıklama</th>
                        <th class="text-end pe-4 py-3" style="width: 180px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted fw-bold">#@item.Id</td>
                            <td>
                                <span class="fw-bold text-dark">@item.Name</span>
                            </td>
                            <td class="text-muted small">
                                @if (string.IsNullOrEmpty(item.Description))
                                {
                                    <span class="fst-italic text-black-50">- Açıklama Yok -</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-primary px-3 me-1"
                                   style="border-radius: 8px;">
                                    Düzenle
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger px-3"
                                   style="border-radius: 8px;"
                                   onclick="return confirm('DİKKAT: Bu kategoriyi silerseniz bağlı ürünler etkilenebilir. Emin misiniz?');">
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5 text-muted">
            <h5>Henüz kategori eklenmemiş.</h5>
        </div>
    }
</div>