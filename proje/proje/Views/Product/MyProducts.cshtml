@model List<IkinciElEsya.Models.Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Ürünlerim (Profilim)</h2>
        <a asp-action="Create" class="btn btn-success">+ Yeni Ürün Ekle</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            Henüz hiç ürün eklemediniz. <a asp-action="Create">Hemen ilk ilanını ver!</a>
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Görsel</th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 100px;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" width="80" height="60" style="object-fit:cover; border-radius:5px;" />
                            }
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Price.ToString("C2")</td>
                        <td><span class="badge bg-secondary">@item.Category?.Name</span></td>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>