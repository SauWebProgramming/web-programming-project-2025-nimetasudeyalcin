@model IkinciElEsya.Models.Product

<div class="container mt-5">

    <!-- Geri Dön Butonu -->
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted">
            &larr; Ürünlere Dön
        </a>
    </div>

    <div class="row">
        <!-- SOL TARA: Ürün Resmi -->
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0 overflow-hidden" style="border-radius: 20px;">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid w-100" style="object-fit: cover; max-height: 500px;" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center text-muted" style="height: 400px;">
                        Resim Yok
                    </div>
                }
            </div>
        </div>

        <!-- SAĞ TARAF: Bilgiler -->
        <div class="col-md-6">

            <!-- Kategori Rozeti -->
            <span class="badge bg-light text-primary border mb-2 px-3 py-2 rounded-pill">
                @Model.Category?.Name
            </span>

            <!-- Başlık -->
            <h1 class="fw-bold text-dark mb-2">@Model.Title</h1>

            <!-- Fiyat -->
            <h2 class="text-primary fw-bold mb-4">@Model.Price.ToString("C2")</h2>

            <!-- Açıklama Kutusu -->
            <div class="p-4 bg-white rounded-3 shadow-sm border mb-4">
                <h5 class="fw-bold text-muted small">ÜRÜN AÇIKLAMASI</h5>
                <p class="mb-0 text-dark" style="white-space: pre-line;">@Model.Description</p>
            </div>

            <!-- Satıcı Bilgi Kartı -->
            <div class="card border-0 shadow-sm bg-light mb-4">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="bg-white rounded-circle d-flex align-items-center justify-content-center shadow-sm text-primary fw-bold"
                         style="width: 50px; height: 50px; font-size: 1.2rem;">
                        <!-- Baş harfleri gösterir -->
                        @ViewBag.SellerName.Substring(0,1)
                    </div>
                    <div>
                        <small class="text-muted d-block">Satıcı</small>
                        <span class="fw-bold text-dark">@ViewBag.SellerName</span>
                    </div>
                </div>
            </div>

            <!-- İletişim Butonu (Mail Atar) -->
            <a href="mailto:@ViewBag.SellerEmail?subject=@Model.Title Hakkında" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                📧 Satıcı ile İletişime Geç
            </a>

        </div>
    </div>
</div>