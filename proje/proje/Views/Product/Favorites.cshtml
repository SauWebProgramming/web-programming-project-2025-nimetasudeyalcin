@model List<IkinciElEsya.Models.Product>
@inject IkinciElEsya.Services.CurrencyService CurrencyService
@{
    decimal dollarRate = CurrencyService.GetUsdRate();
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">Favorilerim</h2>
            <p class="text-muted small mb-0">Beğendiğiniz ürünler burada listelenir.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
            &larr; Alışverişe Dön
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="card shadow-sm border-0 text-center py-5">
            <div class="card-body">
                <div class="display-1 text-muted mb-3">💔</div>
                <h4 class="text-muted fw-bold">Favori listeniz boş.</h4>
                <p class="text-muted mb-4">Beğendiğiniz ürünleri kalp butonuna basarak buraya ekleyebilirsiniz.</p>
                <a asp-action="Index" class="btn btn-primary px-5 rounded-pill">Ürünleri Keşfet</a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-effect">

                        <button class="btn btn-light rounded-circle position-absolute top-0 start-0 m-2 shadow-sm fav-btn"
                                data-id="@item.Id"
                                style="width: 35px; height: 35px; padding: 0; display: flex; align-items: center; justify-content: center; z-index: 10;">
                            <i class="bi bi-heart-fill text-danger"></i>
                        </button>

                        <div style="position: relative;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="text-muted">Resim Yok</span>
                                </div>
                            }
                            <span class="badge bg-white text-primary shadow-sm position-absolute top-0 end-0 m-2 px-2 py-1" style="border-radius: 10px; font-size: 0.7rem;">
                                @item.Category?.Name
                            </span>
                        </div>

                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="card-title fw-bold text-dark text-truncate">@item.Title</h6>
                            <div class="d-flex align-items-baseline gap-2">
                                <span class="text-primary fw-bold">@item.Price.ToString("C2")</span>
                                <small class="text-muted" style="font-size: 0.7rem;">(≈$@((item.Price / dollarRate).ToString("N0")))</small>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary w-100 rounded-pill">İncele</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Favoriden Çıkarma İşlemi
            $(".fav-btn").click(function () {
                var btn = $(this);
                var id = btn.data("id");

                // AJAX isteği ile favoriden kaldır
                $.post("/Favorite/Toggle", { productId: id }, function (data) {
                    if (data.success) {
                        // Eğer favoriden çıktıysa, o kartı sayfadan animasyonla sil
                        btn.closest(".col-md-3").fadeOut(300, function () {
                            $(this).remove();
                            // Eğer hiç ürün kalmadıysa sayfayı yenile ki "Boş" uyarısı gelsin
                            if ($(".col-md-3").length == 0) location.reload();
                        });
                    }
                });
            });
        });
    </script>
}