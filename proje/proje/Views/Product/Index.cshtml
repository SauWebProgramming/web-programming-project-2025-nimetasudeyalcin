@model List<IkinciElEsya.Models.Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Ürün Listesi</h2>
        <a asp-action="Create" class="btn btn-success">+ İlan Ver</a>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Görsel</th>
                <th>Ürün Adı</th>
                <th>Kategori</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="80" height="80" style="object-fit:cover; border-radius:5px;" />
                        }
                        else
                        {
                            <span>Resim Yok</span>
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>
                        <span class="badge bg-info text-dark">@item.Category?.Name</span>
                    </td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>