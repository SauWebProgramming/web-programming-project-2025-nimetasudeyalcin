@model List<IkinciElEsya.Models.ApplicationUser>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">Kullanıcı Yönetimi</h2>
            <p class="text-muted small mb-0">Sisteme kayıtlı üyeleri görüntüleyin ve yönetin.</p>
        </div>
        <div class="badge bg-white text-primary border shadow-sm px-3 py-2 rounded-pill">
            Toplam: @Model.Count Üye
        </div>
    </div>

    <div class="card shadow border-0 overflow-hidden" style="border-radius: 15px;">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-primary">
                        <th class="ps-4 py-3">Email Adresi</th>
                        <th class="py-3">Ad Soyad</th>
                        <th class="text-end pe-4 py-3" style="width: 150px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-dark">@user.Email</span>
                                @if (user.Email == "admin@admin.com")
                                {
                                    <span class="badge bg-primary ms-2 shadow-sm" style="font-size: 0.7rem;">YÖNETİCİ</span>
                                }
                            </td>

                            <td class="text-muted">
                                @if (!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName))
                                {
                                    <span>@user.FirstName @user.LastName</span>
                                }
                                else
                                {
                                    <span class="small fst-italic text-muted">- İsim Girilmemiş -</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                @if (user.Email != "admin@admin.com")
                                {
                                    <a asp-action="Delete" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-outline-danger px-3"
                                       style="border-radius: 8px;"
                                       onclick="return confirm('DİKKAT: Bu kullanıcıyı silerseniz, eklediği ürünler de silinebilir veya sahipsiz kalabilir. Emin misiniz?');">
                                        Sil
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">Korumalı Hesap</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>