@model List<IkinciElEsya.Models.ApplicationUser>

<div class="container mt-4">
    <h2>Kullanıcı Yönetimi (Admin)</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Ad Soyad</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>
                        @if (user.Email != "admin@admin.com") // Admin kendini silemesin
                        {
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>