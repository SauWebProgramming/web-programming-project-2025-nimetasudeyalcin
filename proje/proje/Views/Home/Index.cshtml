@{
    ViewData["Title"] = "Anasayfa";
}

<div class="p-5 mb-5 bg-white rounded-3 shadow border-0 text-center position-relative overflow-hidden">
    <div class="container-fluid py-5">

        <h1 class="display-3 mb-3" style="font-family: 'Poppins', sans-serif; letter-spacing: -2px; line-height: 1.2;">
            <span style="font-weight: 800; color: var(--primary-color);">ikinci elin</span><br class="d-md-none" /> <span style="font-weight: 300; color: var(--text-dark);">yeni adresi</span><span style="color: var(--secondary-color); font-weight: 800;">.</span>
        </h1>

        <p class="col-md-8 fs-5 mx-auto text-muted mb-4" style="font-weight: 300;">
            Kullanmadığın eşyaları nakite çevir, hayalindeki ürünlere uygun fiyatla ulaş.
            Güvenli, hızlı ve modern alışveriş deneyimini keşfet.
        </p>

        <div class="d-flex justify-content-center gap-3 align-items-center">
            <a href="/Product" class="btn btn-primary btn-lg px-5 shadow-sm rounded-pill fw-bold" style="padding-top: 12px; padding-bottom: 12px;">
                Alışverişe Başla
            </a>

            @if (!User.Identity.IsAuthenticated)
            {
                <a href="/Account/Register" class="text-decoration-none fw-bold text-muted hover-link px-3">
                    Hemen Kayıt Ol &rarr;
                </a>
            }
            else
            {
                <a href="/Product/Create" class="btn btn-outline-primary btn-lg px-5 rounded-pill fw-bold" style="padding-top: 12px; padding-bottom: 12px;">
                    + İlan Ver
                </a>
            }
        </div>
    </div>
</div>

<div class="row align-items-md-stretch">

    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm hover-effect">
            <div class="card-body p-4 text-center">
                <div class="display-4 mb-3">🚀</div>
                <h3 class="h4 fw-bold text-dark">Hızlı Satış</h3>
                <p class="text-muted">
                    Eşyalarının fotoğrafını çek, bilgilerini gir ve saniyeler içinde ilana koy.
                    Alıcılarla buluşmak hiç bu kadar kolay olmamıştı.
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm hover-effect">
            <div class="card-body p-4 text-center">
                <div class="display-4 mb-3">💎</div>
                <h3 class="h4 fw-bold text-dark">Geniş Ürün Yelpazesi</h3>
                <p class="text-muted">
                    Elektronikten mobilyaya, giyimden aksesuara kadar binlerce ürün seni bekliyor.
                    Kategorileri gezmeye hemen başla.
                </p>
                <a href="/Product" class="btn btn-sm btn-link text-primary text-decoration-none fw-bold">
                    Ürünleri İncele &rarr;
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm hover-effect">
            <div class="card-body p-4 text-center">
                <div class="display-4 mb-3">🛡️</div>
                <h3 class="h4 fw-bold text-dark">Güvenli Platform</h3>
                <p class="text-muted">
                    Yönetici onaylı ilanlar ve güvenilir kullanıcı profilleri ile içiniz rahat olsun.
                    Profilinizi oluşturun ve güvenle yönetin.
                </p>
            </div>
        </div>
    </div>

</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>